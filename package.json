{
  "name": "@game/specification",
  "version": "1.0.3",
  "description": "游戏前端统一项目代码规范的命令行工具",
  "main": "dist/index.js",
  "bin": {
    "spec": "dist/index.js"
  },
  "scripts": {
    "lint": "eslint .",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "beta": "HUSKY_SKIP_HOOKS=1 standard-version --prerelease beta && git push --follow-tags origin && npm publish --tag beta --registry http://npm.vivo.com.cn/",
    "release": "HUSKY_SKIP_HOOKS=1 standard-version --skip.tag && git push --follow-tags origin && npm publish --registry http://npm.vivo.com.cn/",
    "tag": "HUSKY_SKIP_HOOKS=1 standard-version --skip.bump --skip.changelog && git push --follow-tags origin",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.vmic.xyz:game-common/specification.git"
  },
  "keywords": [
    "统一",
    "规范"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "art-template": "^4.13.2",
    "commander": "^6.2.0",
    "core-js": "^3.7.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/fs-extra": "^9.0.3",
    "@types/inquirer": "^7.3.1",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
